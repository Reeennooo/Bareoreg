mixin custom-select()
  .custom-select
    label(for="my-select").custom-select__field Технология
    input(type="checkbox" id='checkbox-1' class='custom-select__checkbox')
    label().custom-select__label
    select(name="my-select" id='my-select' multiple)
      option(value="1") Опция 1
      option(value="2") Опция 2
      option(value="3") Опция 3  
      option(value="4") Опция 4
    .custom-select__error